// jsconfig.json
{
  "compilerOptions": {
    "baseUrl": "./", // 解析非相对模块的基地址，默认是当前目录
    "removeComments": true, // 删除注释
    "paths": {
      "~/*": ["public"],
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
  },
  "sourceMap": true, // 生成目标文件的sourceMap文件
  "exclude": [
    // 要排除的文件
    "node_modules",
    "dist"
  ],
  "include": [
    // 包含的文件
      "src/*",
      "uno.css"
  ]
}
